# Railway Environment Configuration for GroFresh
# This file contains Railway-specific environment variables
# Copy these to your Railway service environment variables

# Application Configuration
APP_NAME="Restaurant Bazar"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app.railway.app
APP_MODE=live

# Logging Configuration (Railway-optimized)
LOG_CHANNEL=errorlog
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
# Railway will provide DATABASE_URL automatically
# Individual DB variables will be set from DATABASE_URL
DB_CONNECTION=mysql
# DB_HOST, DB_PORT, DB_DATABASE, DB_USERNAME, DB_PASSWORD will be auto-configured

# Cache Configuration (optimized for Railway)
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
# Railway will provide REDIS_URL automatically
# REDIS_HOST, REDIS_PORT, REDIS_PASSWORD will be auto-configured

# Broadcasting
BROADCAST_DRIVER=log

# File Storage Configuration
# For Railway, use cloud storage for persistent files
FILESYSTEM_DRIVER=s3
# Configure these with your cloud storage credentials:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=your-bucket-name
